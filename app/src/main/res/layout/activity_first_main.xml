<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn.FirstMainActivity"
    android:background="#003566">

    <TextView
        android:id="@+id/firstpage_tittle2"
        android:layout_width="329dp"
        android:layout_height="346dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/notosans_extrabold"
        android:text="My\nFit\nRoutine"
        android:textColor="#FFFCFC"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="217dp"
        android:layout_height="222dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/firstpage_tittle2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_firstpage" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:background="@drawable/first_pg_button"
        android:fontFamily="@font/notosans_medium"
        android:text="시작하기"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstpage_tittle2" />

</androidx.constraintlayout.widget.ConstraintLayout>