<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn.FirstMainActivity"
    android:background="@drawable/bg_first">

    <TextView
        android:id="@+id/firstpage_tittle2"
        android:layout_width="329dp"
        android:layout_height="346dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/notosans_extrabold"
        android:text="My\nFit\nRoutine"
        android:textColor="#FFFCFC"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/start_button"
        app:layout_constraintStart_toStartOf="@+id/start_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start_button"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:background="@drawable/first_pg_button"
        android:fontFamily="@font/notosans_medium"
        android:text="시작하기"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/firstpage_tittle2"
        app:layout_constraintEnd_toEndOf="@+id/start_button"
        app:srcCompat="@drawable/icn_shoe" />

</androidx.constraintlayout.widget.ConstraintLayout>