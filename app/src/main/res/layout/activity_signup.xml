<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003566"
    tools:context=".SignUp.SignUpActivity">
    <ImageView
        android:id="@+id/signup_background"
        android:layout_width="411dp"
        android:layout_height="683dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/login_background" />

    <TextView
        android:id="@+id/signup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/notosans_medium"
        android:gravity="center"
        android:text="회원가입"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signup_background" />

    <ScrollView
        android:id="@+id/signup_scroll"
        android:layout_width="0dp"
        android:layout_height="479dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toTopOf="@+id/signup_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/signup_background"
        app:layout_constraintTop_toBottomOf="@+id/signup_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/signup_email_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="이메일"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/signup_email"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/login_signup_blank"
                android:fontFamily="sans-serif"
                android:hint="이메일을 입력해주세요."
                android:padding="13dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/signup_pw_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="비밀번호"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/signup_pw"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/login_signup_blank"
                android:fontFamily="sans-serif"
                android:hint="특수문자 포함 8자리 이상의 비밀번호를 입력하세요."
                android:inputType="textPassword"
                android:padding="13dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/signup_pw_again_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="비밀번호 재확인"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/signup_pw_again"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/login_signup_blank"
                android:fontFamily="sans-serif"
                android:hint="비밀번호를 재확인해주세요."
                android:inputType="textPassword"
                android:padding="13dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/signup_age_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="나이"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/signup_age"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/login_signup_blank"
                android:fontFamily="sans-serif"
                android:hint="나이를 입력해주세요. "
                android:padding="13dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/signup_cm_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="키"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/signup_cm"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/login_signup_blank"
                android:fontFamily="sans-serif"
                android:hint="키를 입력해주세요."
                android:padding="13dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/signup_kg_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="몸무게"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/signup_kg"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/login_signup_blank"
                android:fontFamily="sans-serif"
                android:hint="몸무게를 입력해주세요."
                android:padding="13dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/signup_name_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="이름"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/signup_name"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/login_signup_blank"
                android:fontFamily="sans-serif"
                android:hint="이름을 입력해주세요."
                android:padding="13dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/signup_gender_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="성별"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/signup_male_box"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="남성" />

            <CheckBox
                android:id="@+id/signup_female_box"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="여성" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/signup_button"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/login_signup_button"
        android:fontFamily="@font/notosans_medium"
        android:text="회원가입 하기"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/signup_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>