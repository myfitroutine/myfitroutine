<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingTop="10dp"
    >

    <ImageView
        android:id="@+id/meal_dialog_search_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/btn_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/meal_dialog_search_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:text="달걀 1개"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/meal_dialog_search_image"
        app:layout_constraintEnd_toStartOf="@+id/meal_dialog_search_cal"
        app:layout_constraintStart_toEndOf="@+id/meal_dialog_search_image"
        app:layout_constraintTop_toTopOf="@+id/meal_dialog_search_image" />

    <TextView
        android:id="@+id/meal_dialog_search_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1,000"
        android:textSize="13sp"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/meal_dialog_search_cal_uint"
        app:layout_constraintEnd_toStartOf="@+id/meal_dialog_search_cal_uint" />

    <TextView
        android:id="@+id/meal_dialog_search_cal_uint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Kcal"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/meal_dialog_search_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="#D9D9D9"
        app:layout_constraintTop_toBottomOf="@+id/meal_dialog_search_text"
        tools:layout_editor_absoluteX="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>